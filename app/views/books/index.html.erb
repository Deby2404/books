<!--一覧-->


<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>


<h1>Books</h1>



<table>
  <thead>
    <tr>
      <th>Ttle</th>
      <th>Body</th>
      <th collspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td class= show><%= link_to "Show", book_path(book.id) %></td>
　　 <td class= edit><%= link_to "Edit", edit_book_path(book.id) %></td>
　　 <td class= destroy><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
 <% end %>
 </tbody>
</table>









<!--フォーム-->
<h2>New book</h2>

<!--エラーメッセージ-->
 <% if @book.errors.any? %>
 <%= @book.errors.count %>errors prohibited this book from being saved:
 <ul>
   <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
 </ul>
 <% end %>

<!--フォーム-->
<%= form_with model: @book, url:'/books', local:true do |f| %>
 <span class= new_book>
    <div class= field>
    <h4>Title</h4>
  <div><%= f.text_field :title %></div>
  </div>

  <div class= field>
    <h4>Body</h4>
  <div><%= f.text_area :body %></div>
  </div>


 <div class= actions>
    <%= f.submit 'Create Book' %>
 </div>
 </span>

<% end %>




